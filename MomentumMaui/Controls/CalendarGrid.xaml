<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MomentumMaui.Controls.CalendarGrid">
    <VerticalStackLayout Spacing="8">
        <!-- Weekday headers -->
        <Grid x:Name="WeekdayHeader"
          ColumnDefinitions="*,*,*,*,*,*,*"
          Padding="4,0">
            <!-- Labels added in code-behind -->
        </Grid>

        <!-- Days grid -->
        <Grid x:Name="DaysGrid"
          ColumnDefinitions="*,*,*,*,*,*,*"
          RowSpacing="6"
          ColumnSpacing="6"
          Padding="0,4" />
    </VerticalStackLayout>
</ContentView>