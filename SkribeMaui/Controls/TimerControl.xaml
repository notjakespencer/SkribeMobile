<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkribeMaui.Controls.TimerControl">
    <Grid WidthRequest="128" HeightRequest="128">
        <!-- Background Circle -->
        <Ellipse Fill="Transparent"
                 Stroke="{AppThemeBinding Light=#F5F5F4, Dark=#292524}"
                 StrokeThickness="8" />

        <!-- Progress Circle (we'll draw this in code-behind) -->
        <GraphicsView x:Name="ProgressCircle" />

        <!-- Time Display -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label x:Name="TimeLabel"
                   Text="2:00"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light=#1C1917, Dark=#FAFAF9}" />
            <Label x:Name="StatusLabel"
                   Text="ready"
                   FontSize="12"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light=#78716C, Dark=#A8A29E}"
                   Margin="0,4,0,0" />
        </StackLayout>
    </Grid>
</ContentView>
    
    